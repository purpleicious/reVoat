{
  "manifest_version": 2,

  "name": "reVoat",
  "description": "My Voat Enhancer",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    // "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://voat.co/*"],
      "js": ["jquery.min.js", "scripts/hide.js"]
    }
  ],
  
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}